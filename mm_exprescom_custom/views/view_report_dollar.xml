<odoo>
  <data>
        <!--Vista tree-->
        <record id="report_view_tree_dollar" model="ir.ui.view">
            <field name="name">Report View Tree Dollar</field>
            <field name="model">report.view.dollar</field>
            <field name="arch" type="xml">
                <tree default_order='name_inv' string="Reporte Vencidos por Cobrar en Dolares" create="false" import="false">
                     <field name="client"/>
                     <field name="name_inv"/>
                     <field name="total_usd" sum="Sum total"/>
                     <field name="total_usd_30" sum="Sum total30"/>
                     <field name="total_usd_60" sum="Sum total60"/>
                     <field name="total_usd_90" sum="Sum total90"/>
                     <field name="total_usd_120" sum="Sum total12"/>
                     <field name="total_usd_old" sum="Sum totalold"/>
                </tree>
            </field>
        </record>

      <record id="action_report_dollar" model="ir.actions.act_window">
            <field name="name">Reporte Vencidos por Cobrar en Dolares</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">report.view.dollar</field>
            <field name="view_mode">tree</field>
        </record>

        <menuitem id="report_dollar_view"
                  name="Vencidos por cobrar en USD"
                  parent="account.menu_finance_reports"
                  action="action_report_dollar"
                  sequence="2" />

  </data>
</odoo>