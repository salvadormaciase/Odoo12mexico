<odoo>
    <data>
         <record id="view_res_currency_rate_inherit" model="ir.ui.view">
            <field name="name">currency.rate.form.inherit</field>
            <field name="model">res.currency.rate</field>
            <field name="inherit_id" ref="base.view_currency_rate_tree"/>

             <field name="arch" type="xml">
                 <xpath expr="//field[@name='rate']" position="attributes">
                     <attribute name="attrs">{'readonly': [('currency_id', '=', 2)]}</attribute>
                 </xpath>

                 <xpath expr="//field[@name='name']" position="after">
                     <field name="currency_id"/>
                 </xpath>

                 <xpath expr="//field[@name='rate']" position="before">
                     <field name="mm_currency_rate" string="Currency Rate" attrs="{'invisible': [('currency_id', '!=', 2)]}"/>
                 </xpath>

            </field>
        </record>
	</data>
</odoo>




