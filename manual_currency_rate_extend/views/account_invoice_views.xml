<odoo>

    <record id="view_account_invoice_form" model="ir.ui.view">
        <field name="name">account.invoice.form</field>
        <field name="model">account.invoice</field>
        <field name="inherit_id" ref="sr_manual_currency_exchange_rate.invoice_form_extends_add_manual_currency_exchange_rate"/>
        <field name="arch" type="xml">
            <field name="manual_currency_exchange_rate" position="after">
                <field name="inverse_currency_rate"
                       attrs="{'invisible': ['|', ('apply_manual_currency_exchange', '=', False), ('active_manual_currency_rate', '=', False)]}"/>
            </field>
        </field>
    </record>

</odoo>
