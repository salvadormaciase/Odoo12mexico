<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="invoice_supplier_form" model="ir.ui.view">
        <field name="name">account.invoice.supplier.form</field>
        <field name="model">account.invoice</field>
        <field name="inherit_id" ref="account.invoice_supplier_form"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet/div[1]" position="before">
                <div class="oe_button_box" name="button_box">
                    <button name="action_view_realization_move" type="object"
                            class="oe_stat_button" icon="fa-money"
                            context="{'realization_move':True}"
                            attrs="{'invisible': [('realization_move_ids_nbr', '=', 0)]}">
                        <field name="realization_move_ids_nbr" widget="statinfo" string="Entries"/>
                    </button>
                    <button name="action_view_realization_move" type="object"
                            context="{'revaluation_ledger':True}"
                            class="oe_stat_button" icon="fa-money"
                            attrs="{'invisible': [('revaluation_ledger_ids_nbr', '=', 0)]}">
                        <field name="revaluation_ledger_ids_nbr" widget="statinfo" string="Ledger"/>
                    </button>
                </div>
            </xpath>
        </field>
    </record>

    <record id="invoice_form" model="ir.ui.view">
        <field name="name">account.invoice.form</field>
        <field name="model">account.invoice</field>
        <field name="inherit_id" ref="account.invoice_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('oe_button_box')]" position="inside">
                <button name="action_view_realization_move" type="object"
                        class="oe_stat_button" icon="fa-money"
                        context="{'realization_move':True}"
                        attrs="{'invisible': [('realization_move_ids_nbr', '=', 0)]}">
                    <field name="realization_move_ids_nbr" widget="statinfo" string="Entries"/>
                </button>
                <button name="action_view_realization_move" type="object"
                        context="{'revaluation_ledger':True}"
                        class="oe_stat_button" icon="fa-money"
                        attrs="{'invisible': [('revaluation_ledger_ids_nbr', '=', 0)]}">
                    <field name="revaluation_ledger_ids_nbr" widget="statinfo" string="Ledger"/>
                </button>
            </xpath>
        </field>
    </record>
</odoo>
